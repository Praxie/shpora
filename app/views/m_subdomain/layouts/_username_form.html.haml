= form_tag user_session_path do
  %p
    = text_field_tag 'user[username]', nil, :placeholder => 'Имя пользователя'
  %p
    = password_field_tag 'user[password]', nil, :placeholder => 'Пароль', class: 'form-control'
  %p
    = check_box_tag 'user[remember_me]'
    = label_tag 'user[remember_me]', 'Запомнить меня'
  %p
    %button Войти