= content_for(:title, 'Users | shpora.me')

%h1 Users

= render 'admin/tabs'

%hr
- @users.each do |user|
  .row
    .col-sm-2
      %strong= link_to user.username, admin_user_path(user)
    .col-sm-4
      = user.email
    .col-sm-4
      = user.created_at.to_s(:long)
    .col-sm-2
      = link_to 'Relogin', relogin_admin_user_path(user), class: 'btn btn-info'
      - if current_user != user
        = link_to admin_user_path(user), method: :delete, class: 'btn btn-danger _center' do
          %i.fa.fa-trash
  %hr
= will_paginate @users
