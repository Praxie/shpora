%header
  //%nav.navbar-fixed-top

- if user_signed_in?
  .navbar.nav-brand
    = link_to 'shpora.me', root_path, class: 'brand'
    = link_to '', new_page_path, class: "fa fa-plus add-button", title: I18n.t('labels.create')
    .btn-group.dropdown-wrapper
      %button.dropdown-body.btn.btn-drop.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
        = current_user.username
        %span.caret
      %ul.dropdown-menu.dropdown-body{role: "menu"}
        %li= link_to I18n.t 'views.header.profile', user_path(current_user), title: I18n.t('views.header.profile')
        %li.divider
        %li= link_to I18n.t 'views.header.sign_out', destroy_user_session_path, method: :delete, title: I18n.t('views.header.sign_out')
- else
  .navbar.nav-brand
    = link_to 'shpora.me', root_path, class: 'brand'
