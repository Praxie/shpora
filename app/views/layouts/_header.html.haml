%header
  //%nav.navbar-fixed-top

- if user_signed_in?
  .navbar.nav-brand
    = link_to 'shpora.me', root_path, class: 'brand'
    = link_to '', new_page_path, class: "fa fa-plus add-button", title: "Создать"
    /- unless controller_name == 'home'
    .btn-group.dropdown-wrapper
      %button.btn.btn-drop.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
        = current_user.username
        %span.caret
      %ul.dropdown-menu.dropdown-body{role: "menu"}
        %li= link_to 'Профиль', user_path(current_user), title: "Профиль"
        %li.divider
        %li= link_to 'Выход', destroy_user_session_path, method: :delete, title: "Выход"
- else
  .navbar.nav-brand
    = link_to 'shpora.me', root_path, class: 'brand'
