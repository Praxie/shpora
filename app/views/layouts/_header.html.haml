.navbar.nav-brand
  = link_to 'shpora.me', root_path, class: 'brand'
  - if user_signed_in?
    = link_to '', new_page_path, class: "fa fa-plus add-button", title: t('labels.create'), data: { turbolinks: false }
    .btn-group.dropdown-wrapper
      %button.dropdown-body.btn.btn-drop.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
        = current_user.username
        %span.caret
      %ul.dropdown-menu.dropdown-body{role: 'menu'}
        %li= link_to t('views.header.profile'), user_path(current_user), title: t('views.header.profile')
        %li= link_to 'Admin', admin_users_path if current_user.admin?
        %li.divider
        %li= link_to t('views.header.sign_out'), destroy_user_session_path, method: :delete, title: t('views.header.sign_out')
